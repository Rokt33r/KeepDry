typed()
  & h1, & h2, & h3, & h4, & h5, & h6
    mb()
    small
      color inactiveColor
      font-size 0.8em
  & h1
    font-size 50px
  & h2
    font-size 42px
  & h3
    font-size 36px
  & h4
    font-size 30px
  & h5
    font-size 24px
  & h6
    font-size 14px

  & strong
    font-weight bold
  & em
    font-style italic

  & p, & pre
    mb()

marked()
  typed()
  & blockquote
    border-left solid 4px brandColor
    mb()
    padding 0 25px
    color inactiveColor
    font-size 1.15em
  & ul
    list-style-type disc
    padding-left 35px
    mb()
    li
      display list-item
      margin 0 0 5px
    &>li>ul
      list-style-type circle
      margin-bottom 0
      &>li>ul
        list-style-type square
        margin-bottom 0
  & ol
    list-style-type decimal
    padding-left 35px
    mb()
    li
      display list-item
      margin 15px 0
      margin 0 0 5px
      &>li>ol
        margin-bottom 0
        &>li>ol
          margin-bottom 0
  & code
    background-color markedCodeBgColor
    font-family monospace
    border solid 1px borderColor
    padding 0.20em 0.25em
    margin 0 0.15em
    border-radius 5px
  & pre
    background-color markedCodeBgColor
    border solid 1px borderColor
    border-radius 5px
    padding 5px
    mb()
    &>code
      background-color transparent
      font-family monospace
      border none
      padding 0
      margin 0
  & table
    width 100%
    table()
