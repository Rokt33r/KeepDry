// Style
btnDefault()
  border-style solid
  border-width 1px
  font-size controlFontSize
  border-color btnBorderColor
  background-color transparent
  color btnColor
  transition 0.1s
  &:hover, &:focus
    border-color btnHighlightenColor
    color btnHighlightenColor
  &:active
    border-color btnPrimaryColor
    background-color btnPrimaryBorderColor
    color bgColor
  &:disabled, &.disabled
    opacity 0.6
  &:focus
    outline none

btnPrimary()
  border-style solid
  border-width 1px
  font-size controlFontSize
  border-color btnPrimaryBorderColor
  background-color transparent
  color btnPrimaryColor
  transition 0.1s
  &:hover, &:focus
    border-color btnPrimaryHighlightenColor
    color btnPrimaryHighlightenColor
  &:active
    background-color btnPrimaryColor
    color bgColor
  &:disabled
    opacity 0.6
  &:focus
    outline none

btnStrip()
  border none
  font-size controlFontSize
  background-color transparent
  color btnColor
  transition 0.1s
  &:hover, &:focus
    color btnHighlightenColor
  &:active
    color btnPrimaryHighlightenColor
  &:focus
    outline none

// Sizing
btnLg()
  border-radius 5px
  height 44px
  line-height 44px
  padding 0 15px
btn()
  border-radius 5px
  height 33px
  line-height 33px
  padding 0 10px
